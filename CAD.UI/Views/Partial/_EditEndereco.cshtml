@model CAD.Domain.Models.Aplicacao.EnderecoModel

@{
    var Id = ViewBag.Id;
}

<h1>Endereço</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditEndereco">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="EnderecoId" />
            </div>
            <div class="form-group">
                <label asp-for="CEP" class="control-label"></label>
                <input id="cep" asp-for="CEP" class="form-control" />
                <span asp-validation-for="CEP" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Logradouro" class="control-label"></label>
                <input asp-for="Logradouro" class="form-control" readonly="true" />
                <span asp-validation-for="Logradouro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numero" class="control-label"></label>
                <input asp-for="Numero" class="form-control" />
                <span asp-validation-for="Numero" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Complemento" class="control-label"></label>
                <input asp-for="Complemento" class="form-control" />
                <span asp-validation-for="Complemento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Bairro" class="control-label"></label>
                <input asp-for="Bairro" class="form-control" readonly="true" />
                <span asp-validation-for="Bairro" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cidade" class="control-label"></label>
                <input asp-for="Cidade" class="form-control" readonly="true" />
                <span asp-validation-for="Cidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uf" class="control-label"></label>
                <input asp-for="Uf" class="form-control" readonly="true" />
                <span asp-validation-for="Uf" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tipo" class="control-label"></label>
                @Html.DropDownListFor(modelItem => 
                    Model.Tipo,
                    new SelectList(ViewBag.Tipos, "Value","Description"),
                    "Selecione...",
                    new {@class="form-control"}
                )
                <span asp-validation-for="Tipo" class="text-danger"></span>
            </div>
            @{
                if (Model == null || Model.EnderecoId == 0)
                {
                    <div class="form-group">
                        <input type="submit" 
                        asp-route-id="@Id" 
                        asp-route-eEvento="@CAD.Domain.Enums.EEvento.Incluir" 
                        value="Salvar" class="btn btn-primary" />
                    </div>
                }
                else
                {
                    <div class="form-group">
                        <input type="submit" 
                        asp-route-id="@Id" 
                        asp-route-eEvento="@CAD.Domain.Enums.EEvento.Alterar" 
                        value="Salvar" class="btn btn-primary" />

                        <input type="submit" 
                        asp-route-id="@Id" 
                        asp-route-eEvento="@CAD.Domain.Enums.EEvento.Excluir" 
                        value="Excluir" class="btn btn-primary" />
                    </div>
                }
            }
        </form>
    </div>
</div>

<div>
    <a asp-action="Edit" asp-route-id="@Id">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
