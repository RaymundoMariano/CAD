@model Cadastro.Domain.Models.EmpresaModel

@{
    ViewData["Title"] = "EditEndereco";
}

@{
    var eTipoEmpresa = (Cadastro.Domain.Enums.ETipoEmpresa)Model.Tipo;
    if (eTipoEmpresa == Cadastro.Domain.Enums.ETipoEmpresa.Matriz)
    {
        @await Html.PartialAsync("~/Views/Partial/_Empresa.cshtml")
    }
    else
    {
        @await Html.PartialAsync("~/Views/Partial/_Filial.cshtml")  
    }
}

@await Html.PartialAsync("~/Views/Partial/_EditEndereco.cshtml", Model.Endereco)

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
